<a href="/mainpage">
	<button>Back to mainpage</button>
</a>

<h2>My Existing Bookings</h2>

<% @bookings.each do |a| %>
	<ul>
		<li>
			<h4>
			Stay name: <a href="/properties/<%= a.property.id %>"><%= a.property.propertyname %></a><br>
			Location: <%= a.property.location %><br>
			Booker: <%= a.bookname %><br>
			Booker's email: <%= a.bookemail %><br>
			Start date: <%= a.startdate %><br>
			End date: <%= a.enddate %><br>

			<form method="post" action="/bookings/<%= a.id %>/destroy">
		    <input name="_method" type="hidden" value="delete"/>
		    <button>Delete</button>
		  </form>

		  <a href="/bookings/<%= a.id %>/edit">
		    <button>Edit</button>
		  </a>

			</h4>
		</li>
	</ul>
<% end %>

